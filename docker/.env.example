# ==========================================
# AIEco - Environment Configuration
# ==========================================

# ----- Environment -----
ENVIRONMENT=development
DEBUG=true

# ----- API Keys -----
VLLM_API_KEY=your-vllm-api-key-here
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# ----- Model Configuration -----
# Cloud: GLM-4.7 358B
CLOUD_MODEL_NAME=zai-org/GLM-4.7-FP8
CLOUD_MODEL_SERVED_NAME=glm-4.7
CLOUD_TENSOR_PARALLEL_SIZE=4
CLOUD_MAX_MODEL_LEN=1048576

# Local: Small model for RTX 3050
LOCAL_MODEL_NAME=THUDM/glm-4-9b-chat
LOCAL_MODEL_SERVED_NAME=glm-4-9b
LOCAL_MAX_MODEL_LEN=8192

# ----- vLLM Server -----
VLLM_HOST=0.0.0.0
VLLM_PORT=8000
GPU_MEMORY_UTILIZATION=0.95

# ----- FastAPI Backend -----
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# ----- Database -----
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=aieco
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=aieco

DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ----- Redis -----
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ----- ChromaDB (Vector Store) -----
CHROMA_HOST=chromadb
CHROMA_PORT=8001

# ----- Observability -----
LANGFUSE_HOST=http://langfuse:3000
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key

# ----- Rate Limiting -----
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000

# ----- Frontend -----
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080
